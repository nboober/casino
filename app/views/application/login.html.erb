<div style="width:100%;text-align:center;">
<h1>Login</h1>

<% if notice %>
    <div><%= notice %></div>
<% end %>

<%= form_tag "/login" do %>
<%= label :username, "Username" %>
<%= text_field_tag :username %><br><br>

<%= label :password, "Password" %>
<%= password_field_tag :password %><br><br>

<%= submit_tag "Login" %>
<% end %>

</div>