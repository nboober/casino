<%= link_to "Home", home_path, :class => "btn btn-outline-dark" %>

<div class="center-page">
<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li style="list-style-type:none;"><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>Register</h2>

<%= form_for @user do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %> <br><br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br><br>

  <%= f.label :username %>
  <%= f.text_field :username %><br><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br><br>

  <%= f.label :age %>
  <%= f.number_field :age, :value => 0 %><br/><br/>

  <%= f.submit "Register" %>

<% end %>

</div>