<%= link_to "Home", home_path, :class => "btn btn-outline-dark" %>

<div class="center-page">

<% if @user.admin == true %>
    <h1>***ADMIN***</h1>

    <% else %>

    <h1>***USER***</h1>

<% end %>

<% if notice %>
      <div class="notice"><%= notice %></div>
<% end %>

<h1><%= "#{@user.first_name} #{@user.last_name}" %></h1>

<h2>Username: <%= @user.username %></h2>

<h2>Age: <%= @user.age %></h2>

<h2>Total tokens: <%= @user.tokens %></h2>

<button><%= link_to "Edit Profile", edit_user_path(@user)%></button>
<button><%= link_to "Delete Profile", user_path(@user), method: "delete"%></button>

</div>